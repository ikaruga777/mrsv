<h1>Listing scores</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Kana</th>
      <th>Composer</th>
      <th>Arranger</th>
      <th>Publisher</th>
      <th>Status</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @scores.each do |score| %>
      <tr>
        <td><%= score.title %></td>
        <td><%= score.kana %></td>
        <td><%= score.composer %></td>
        <td><%= score.arranger %></td>
        <td><%= score.publisher %></td>
        <td><%= score.status %></td>
        <td><%= score.description %></td>
        <td><%= link_to 'Show', score %></td>
        <td><%= link_to 'Edit', edit_score_path(score) %></td>
        <td><%= link_to 'Destroy', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

